@model AccountViewModel
<div class="row">
    <div class="col">
        <h3 class="px-4">New User</h3>
        <br />        
        <form asp-controller="Account" asp-action="Add" method="post">
            <div class="form-group">
                <label asp-for="UserName" class="control-label px-4"><strong>Username:</strong></label>
                <div class="px-4">
                    <input asp-for="UserName" class="form-control" required />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label px-4"><strong>Password:</strong></label>
                <div class="px-4">
                    <input asp-for="Password" class="form-control" required />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label px-4"><strong>Confirm password:</strong></label>
                <div class="px-4">
                    <input asp-for="ConfirmPassword" class="form-control" required />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Roles" class="control-label px-4"><strong>Role:</strong></label>
                <div class="px-4">
                    <select asp-for="Roles" class="form-control" required>
                        <option value="" selected disabled>Choose role...</option>
                        <option value="Administrator">Administrator</option>
                        <option value="Publisher">Publisher</option>
                        <option value="Editor">Editor</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="px-4" style="float:right;">
                    <button class="btn-outline-success btn-sm" type="submit">Save</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col">
        <h3 class="px-4">Active Users</h3>
        <br />
        <br />      
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th><i>Users</i></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr><td><small><i>@user</i></small></td></tr>
                }
            </tbody>
        </table>
    </div>
</div>


